
<div class="jumbotron text-center" style="background-color:#dEE119">
  <h1>Welcome to Loloapp</h1>
  <p id="notice"><%= notice %></p>
</div>

<div class="container text-center"  >
<%= form_tag("/login", method: "post") do %>
      <h2 class="form-signin-heading">Please sign in</h2>

      <div class="form-group">      <%= label_tag(:email, "Email:", class:'sr-only') %>
        <%= text_field_tag :email, nil, placeholder: 'Email'   %></div>

      <div class="form-group">
        <%= label_tag(:password, "Password:", class:'sr-only') %>
        <%= password_field_tag(:password, nil,  placeholder: 'Password'   ) %>
      </div>








    <%= submit_tag("Log in", class: 'btn btn-default') %>






<% end %>

    <%= link_to("Sign up", url_for("/signup")) %>

<p><%=@error%></p>
 </div>

